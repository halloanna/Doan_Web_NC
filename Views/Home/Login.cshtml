
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/reponsive.min.css" rel="stylesheet" />
    <script src="~/Scripts/scripts.js" defer></script>
</head>

<body class="login-container">

    <div class="container-fluid">
        <div class="col-lg-6 col-md-6">
            <div class="school-content">
                <h3>welcome to</h3>
                <h1>papatoetoe</h1>
                <span class="sub-h1">
                    high school
                </span>
            </div>
        </div>
        <div class="col-lg-6 col-md-6">
            <form action="#" method="get" id="loginForm" class="form-horizontal">
                <h3>Đăng nhập</h3>
                <div class="form-group">
                    <div class="control-label col-md-4">
                        <label for="username">Tên đăng nhập</label>
                    </div>
                    <div class="col-md-8">
                        <input class="form-control" type="text" name="username" id="username">
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-4">
                        <label for="username">Mật khẩu</label>
                    </div>
                    <div class="col-md-8">
                        <input class="form-control" type="text" name="username" id="username">
                        <div class="remember-info-group">

                            <input type="checkbox" name="rememberMe" id="rememberMe">
                            <label for="rememberMe">Remember Me</label>
                        </div>
                        <a href="#" class="btn-link">Quên mật khẩu?</a>
                    </div>
                </div>
                <button href="#" class="btn btn-primary btn-login">Đăng nhập</button>
                <button href="#" class="btn btn-primary btn-guest">Đăng nhập với tư cách khách</button>
            </form>

        </div>
    </div>
</body>

</html>